<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#F3F2F2">

  <com.google.android.material.appbar.AppBarLayout
    android:id="@+id/voteResult_appBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F3F2F2">

    <com.google.android.material.appbar.MaterialToolbar
      android:id="@+id/voteResult_topAppBar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:navigationIcon="@drawable/ic_arrow_back_black"
      app:title="투표 결과"
      app:titleTextAppearance="@style/black_bold_title" />

  </com.google.android.material.appbar.AppBarLayout>

  <Button
    android:id="@+id/voteResult_btn_return"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_below="@id/voteResult_lv_listView"
    android:layout_marginTop="10dp"
    android:layout_centerHorizontal="true"
    android:text="그룹 화면으로 돌아가기"
    style="@style/Theme.WooManSi.Button.Round" />

  <ListView
    android:id="@+id/voteResult_lv_listView"
    android:scrollbarStyle="outsideOverlay"
    android:layout_width="match_parent"
    android:layout_height="370dp"
    android:layout_below="@id/voteResult_tv_title"
    android:layout_marginTop="15dp"
    android:paddingBottom="15dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:clipToPadding="false"
    android:divider="#00000000"
    android:dividerHeight="15dp"
    android:scrollbarSize="10dp"
    android:clickable="false"/>

  <TextView
    android:id="@+id/voteResult_tv_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="100dp"
    android:layout_centerHorizontal="true"
    android:layout_below="@id/voteResult_appBar"
    android:text="최종안"
    android:textAppearance="@style/black_bold"
    android:textSize="30sp" />

</RelativeLayout>