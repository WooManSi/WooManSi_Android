<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:layout_margin="20dp"
    android:paddingStart="15dp"
    android:paddingTop="25dp"
    android:paddingBottom="25dp"
    android:background="@drawable/rectangle_round_white"
    android:elevation="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/listItemGroup_tv_groupName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="그룹명"
            android:textAppearance="@style/black_bold"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/listItemGroup_tv_groupCreatedDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="그룹생성날짜"
            android:textAppearance="@style/gray_bold"
            android:textSize="15sp"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/listItemGroup_ib_enterGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_arrow_right_gray"
        android:background="@android:color/transparent"/>

</RelativeLayout>