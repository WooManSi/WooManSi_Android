<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_margin="20dp"
    android:layout_marginTop="24dp"
    android:layout_marginStart="56dp"
    android:paddingStart="15dp"
    android:background="@drawable/rectangle_round_white"

    app:layout_constraintTop_toBottomOf="@+id/listItemVoteResult_tv_dayOfWeek">

    <TextView
      android:id="@+id/listItemVoteResult_tv_time"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="10dp"
      android:layout_alignParentStart="true"
      android:layout_centerVertical="true"
      android:gravity="center"
      android:text="오전 n시 ~ 오후 n시"
      android:textAppearance="@style/black_bold"
      android:textSize="20sp" />


  </RelativeLayout>

  <TextView
    android:id="@+id/listItemVoteResult_tv_dayOfWeek"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"
    android:text="n요일"
    android:textAppearance="@style/black_bold"
    android:textSize="20sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>