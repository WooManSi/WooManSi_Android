<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:paddingStart="15dp"
    android:paddingTop="15dp"
    android:paddingEnd="15dp"
    android:paddingBottom="10dp"
    android:background="@drawable/rectangle_round_white"
    android:elevation="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="참여하실 그룹명과 코드를\n입력해주세요"
            android:textAppearance="@style/black_bold"
            android:textSize="20dp" />


        <EditText
            android:id="@+id/dialog_joinGroup_et_GroupName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="그룹명"
            android:textStyle="bold"
            android:paddingStart="10dp"
            android:drawableStart="@drawable/ic_magnifying_glass"
            android:drawablePadding="10dp"
            android:background="@drawable/rectangle_line"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/dialog_joinGroup_et_GroupPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="비밀번호(코드)"
            android:textStyle="bold"
            android:paddingStart="10dp"
            android:drawableStart="@drawable/ic_magnifying_glass"
            android:drawablePadding="10dp"
            android:background="@drawable/rectangle_line"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialog_joinGroup_btn_acceptJoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="참여하기"
            android:textColor="#F69F38"
            android:textStyle="bold"
            android:textSize="18dp"
            android:background="@android:color/transparent"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialog_joinGroup_btn_cancel"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/dialog_joinGroup_btn_acceptJoin"
            android:text="취소"
            android:textColor="#F69F38"
            android:textStyle="bold"
            android:textSize="18dp"
            android:background="@android:color/transparent"/>


    </RelativeLayout>


</RelativeLayout>