<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp" >

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로필 사진"
            android:textSize="25dp"
            android:layout_gravity="center"/>

        <android.widget.GridLayout
            android:id="@+id/g_view"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="2"
            android:orientation="horizontal">
                <ImageView
                    android:src="@drawable/ic_profile1"
                    android:padding="2dp"
                    android:id="@+id/image1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_column = "0"
                    android:layout_row = "0"
                    android:layout_weight="1"/>
                <ImageView
                    android:src="@drawable/ic_profile2"
                    android:padding="2dp"
                    android:id="@+id/image2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_column = "1"
                    android:layout_row = "0"
                    android:layout_weight="1"/>
                <ImageView
                    android:src="@drawable/ic_profile3"
                    android:padding="2dp"
                    android:id="@+id/image3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_column = "2"
                    android:layout_row = "0"
                    android:layout_weight="1"/>
                <ImageView
                    android:src="@drawable/ic_profile4"
                    android:padding="2dp"
                    android:id="@+id/image4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_column = "0"
                    android:layout_row = "1"
                    android:layout_weight="1"/>
                <ImageView
                    android:src="@drawable/ic_profile5"
                    android:padding="2dp"
                    android:id="@+id/image5"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_column = "1"
                    android:layout_row = "1"
                    android:layout_weight="1"/>
                <ImageView
                    android:src="@drawable/ic_profile6"
                    android:padding="2dp"
                    android:id="@+id/image6"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_column = "2"
                    android:layout_row = "1"
                    android:layout_weight="1"/>
        </android.widget.GridLayout>
</LinearLayout>