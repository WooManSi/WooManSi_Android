<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:paddingStart="15dp"
    android:paddingTop="15dp"
    android:paddingEnd="15dp"
    android:paddingBottom="10dp"
    android:background="@drawable/rectangle_round_white"
    android:elevation="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="정말 그룹을 나가시겠습니까?"
        android:textAppearance="@style/black_bold"
        android:textSize="20dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialog_exitGroup_acceptExitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="그룹탈퇴"
            android:textColor="#F69F38"
            android:textStyle="bold"
            android:textSize="18dp"
            android:background="@android:color/transparent"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialog_exitGroup_cancelButton"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/dialog_exitGroup_acceptExitButton"
            android:text="취소"
            android:textColor="#F69F38"
            android:textStyle="bold"
            android:textSize="18dp"
            android:background="@android:color/transparent"/>


    </RelativeLayout>


</RelativeLayout>