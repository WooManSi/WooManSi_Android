<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F2F2"
    android:paddingTop="15dp">

    <ImageButton
        android:id="@+id/groupInfo_ib_backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@android:color/transparent"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:src="@drawable/ic_arrow_back_black" />

    <TextView
        android:id="@+id/groupInfo_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/groupInfo_ib_backButton"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="그룹 정보 및 탈퇴"
        android:textAppearance="@style/black_bold"
        android:textSize="26dp" />

    <LinearLayout
        android:id="@+id/groupInfo_ll_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/groupInfo_tv_title"
        android:layout_margin="30dp"
        android:background="@drawable/rectangle_round_white" >


        <TextView
            android:id="@+id/groupInfo_tv_groupInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="그룹 정보"
            android:textAppearance="@style/black_bold"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:text="그룹 명"
            android:textAppearance="@style/gray_bold"
            android:textSize="12sp" />

        <TextView
          android:id="@+id/groupInfo_tv_groupName"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="10dp"
          android:padding="10dp"
          android:background="@drawable/rectangle_round_gray"
          android:elevation="10dp"
          android:text="사인페"
          android:textAppearance="@style/black_bold"
          android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:text="비밀번호(코드)"
            android:textAppearance="@style/gray_bold"
            android:textSize="12sp" />

        <TextView
          android:id="@+id/groupInfo_tv_Password"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="20dp"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:padding="10dp"
          android:background="@drawable/rectangle_round_gray"
          android:elevation="10dp"
          android:text="asdf1234"
          android:textAppearance="@style/black_bold"
          android:textSize="20sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/groupInfo_ll_linearLayout"
        android:layout_marginTop="40dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_alert" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="그룹은 탈퇴하면 다시 복구할 수 없습니다."
            android:textAppearance="@style/gray_bold"
            android:textSize="14sp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/groupInfo_btn_exitGroupButton"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="그룹 나가기"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:textSize="20sp"
            android:background="@drawable/rectangle_round_orange"/>

    </LinearLayout>

</RelativeLayout>