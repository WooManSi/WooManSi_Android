<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WooManSi" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange500</item>
        <item name="colorPrimaryVariant">@color/orange700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.WooManSi.Button.Round" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/round_border</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="Theme.WooManSi.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/round_border</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
    </style>
</resources>